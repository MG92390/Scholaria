rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can only read/write their own data
    match /users/{userId} {
      allow read: if request.auth.uid == userId;
      allow write: if request.auth.uid == userId;
      
      // Allow reading and writing nested stats
      match /stats/{document=**} {
        allow read, write: if request.auth.uid == userId;
      }
    }
    
    // Students can create results and read/query their own results
    match /results/{resultId} {
      allow create: if request.auth.uid != null && request.resource.data.studentId == request.auth.uid;
      allow read: if request.auth.uid != null && resource.data.studentId == request.auth.uid;
      allow list: if request.auth.uid != null;
      allow update, delete: if false; // Results are immutable after creation
    }
    
    // Public read-only access to lessons and questions
    match /lessons/{lessonId} {
      allow read: if request.auth.uid != null;
      allow write: if false;
    }
    
    match /questions/{questionId} {
      allow read: if request.auth.uid != null;
      allow write: if false;
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
